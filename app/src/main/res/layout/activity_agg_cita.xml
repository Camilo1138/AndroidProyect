<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCFD"
    tools:context=".AggCitaActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir Cita Médica"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título de la cita"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <Spinner
        android:id="@+id/spinnerMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etTitulo"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
         />

    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar Fecha"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:layout_below="@id/spinnerMedico"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnSelectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:text="Seleccionar Hora"
        android:layout_below="@id/btnSelectDate"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Cita"
        android:layout_below="@id/btnSelectTime"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
